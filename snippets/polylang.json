{
    "polylang-snippets": {
        "collection": {
            "prefix": "cl",
            "body": "${1:@public}\ncollection ${2:Name} {\n\tid: ${3:type};\n\t$0\n}"
        },
        "field": {
            "prefix": "fl",
            "body": "${1:name}: ${2:type};"
        },
        "optional-field": {
            "prefix": "ofl",
            "body": "${1:name}?: ${2:type};"
        },
        "function": {
            "prefix": "fc",
            "body": "function ${1:name}($2)$3 {\n\t$0\n}"
        },
        "constructor": {
            "prefix": "cn",
            "body": "constructor(id: ${1:type}$2) {\n\tthis.id = id;\n\t$0\n}"
        },
        "if-statement": {
            "prefix": "if",
            "body": "if (${1:condition}) {\n\t$0\n}"
        },
		"if-else-statement": {
			"prefix": "ie",
			"body": "if (${1:condition}) {\n\t$2\n} else {\n\t$0\n}"
		}
    }
}
