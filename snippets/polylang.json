{
    "polylang-snippets": {
        "collection": {
            "prefix": "cl",
            "body": "collection ${1:Name} {\n\t$0\n}"
        },
        "field": {
            "prefix": "fl",
            "body": "${1:name}: ${2:type};"
        },
        "optional-field": {
            "prefix": "ofl",
            "body": "${1:name}?: ${2:type};"
        },
        "function": {
            "prefix": "fc",
            "body": "function ${1:name}($2) {\n\t$0\n}"
        },
        "if-statement": {
            "prefix": "if",
            "body": "if (${1:condition}) {\n\t$0\n}"
        },
		"if-else-statement": {
			"prefix": "ie",
			"body": "if (${1:condition}) {\n\t$2\n} else {\n\t$0\n}"
		}
    }
}
